						</view>
				</view>
		</tui-drawer>
		<!-- 左抽屉弹层 筛选 -->
		<!-- 模板 -->
		<template name="productItem">
				<!-- 商品列表 -->
				<view class="tui-pro-item {{isList?'tui-flex-list':''}}" hover-class="hover" hover-start-time="150" data-guid="{{item.guid}}" bindtap="showDetail">
						<image src="{{item.image}}" class="tui-pro-img {{isList?'tui-proimg-list':''}}" mode="widthFix" />
						<view class="tui-pro-content">
								<view class="tui-pro-tit">{{item.name}}</view>
								<view>
										<view class="tui-pro-price">
												<text class="tui-sale-price">￥{{wxs.priceStr(item.currentPrice)}}</text>
												<text class="tui-factory-price">
														<block wx:if="{{item.originalPrice>0}}">￥{{wxs.priceStr(item.originalPrice)}}</block>
												</text>
										</view>
										<view class="tui-pro-pay">{{item.sales}}人购买</view>
								</view>
						</view>
				</view>
				<!-- 商品列表 -->
		</template>
		<!-- 加载loadding -->
		<tui-loadmore visible="{{!pageEnd}}" index="3" type="red"></tui-loadmore>
		<tui-nomore visible="{{pageEnd }}" bgcolor="#f7f7f7"></tui-nomore>
		<!-- 加载loadding -->
