<!-- 引入.wxs文件 src为相对路径，module指定当前模块的名称 -->
<wxs module="wxs" src="../common/index.wxs" />
<view class="container">
		<!-- header -->
		<view class="tui-header-box">
				<view class="tui-header" style="width:{{width}}px;height:{{height}}px">
						<tui-icon name="arrowleft" color="#000" tui-icon-class="tui-back" style="margin-top:{{arrowTop}}px" bindtap="back"></tui-icon>
						<view class="tui-searchbox" style="margin-top:{{inputTop}}px" bindtap="search">
								<icon type="search" size='13' color='#999'></icon>
								<text class="tui-search-text" wx:if="{{!queryParam.text}}">搜索商品</text>
								<view class="tui-search-key" wx:if="{{queryParam.text}}">
										<view class="tui-key-text">{{queryParam.text}}</view>
										<tui-icon name="shut" size='12' color='#fff'></tui-icon>
								</view>
						</view>
				</view>
		</view>
		<!-- header -->
		<!-- screen -->
		<view class="tui-header-screen" style="top:{{height}}px">
				<view class="tui-screen-top">
						<view class="tui-top-item {{tabIndex==0?'tui-active tui-bold':''}}" data-index="0" bindtap="screen">
								<view>{{selectedName}}</view>
								<tui-icon name="{{selectH>0?'arrowup':'arrowdown'}}" size="14" color="{{tabIndex==0?'#e41f19':'#444'}}" tui-icon-class="tui-ml"></tui-icon>
						</view>
						<view class="tui-top-item {{tabIndex==1?'tui-active tui-bold':''}}" bindtap="screen" data-index="1">
								销量
						</view>
						<view class="tui-top-item {{tabIndex==2?'tui-active tui-bold':''}}" bindtap="screen" data-index="2">
								距离最近
						</view>
						<!-- TODO:筛选 暂时隐藏 -->
						<view class="tui-top-item" bindtap="screen" data-index="3">
								<tui-icon name="{{isList?'manage':'listview'}}" size="{{isList?22:18}}" bold="{{isList?false:true}}" color="#333"></tui-icon>
						</view>
						<!-- <view class="tui-top-item" bindtap="screen" data-index="4">
								<text>筛选</text>
								<tui-icon name="screen" size="12" color="#333" tui-icon-class="tui-ml" bold="{{true}}"></tui-icon>
						</view> -->
						<!-- 下拉选择列表-综合 -->
						<view class="tui-dropdownlist {{selectH>0?'tui-dropdownlist-show':''}}" style="height:{{selectH}}rpx">
								<view class="tui-dropdownlist-item {{item.selected?'tui-bold':''}}" wx:for="{{dropdownList}}" wx:key="index" catchtap="dropdownItem" data-index="{{index}}" data-sorttype="{{item.sortType}}">
										<text class="tui-ml tui-middle">{{item.name}}</text>
										<tui-icon name="check" size="16" color="#e41f19" bold="{{true}}" visible="{{item.selected}}" tui-icon-class="tui-middle"></tui-icon>
								</view>
						</view>
						<view class="tui-dropdownlist-mask {{selectH>0?'tui-mask-show':''}}" catchtap="hideDropdownList"></view>
						<!-- 下拉选择列表-综合 -->
				</view>
				<view class="tui-screen-bottom">
						<block wx:for="{{attrArr}}" wx:key="index">
								<view class="tui-bottom-item {{item.isActive?'tui-btmItem-active':''}}" data-index="{{index}}" data-attr-index="{{index}}" data-attr-select-item-index="{{item.attrSelectItemIndex}}" data-items="{{item.list}}" bindtap="btnDropChange">
										<view class="tui-bottom-text {{item.isActive?'tui-active':''}}">
												{{item.attrSelectItemIndex!=-1?item.list[item.attrSelectItemIndex].name:item.name}}
												<!-- {{index}}
												{{item.selectedName}}
												{{item.selectedName!=''?item.selectedName:item.name}} -->
												<!-- {{attrIndex==index&&item.list.length>0?'tui-btmItem-tap':''}} -->
										</view>
										<tui-icon name="{{attrIndex==index?'arrowup':'arrowdown'}}" size="14" color="{{ item.isActive?'#e41f19':'#444'}}" tui-icon-class="tui-ml" wx:if="{{item.list.length>0}}"></tui-icon>
								</view>
						</block>
				</view>
		</view>
		<!-- screen -->
		<!-- list -->
		<view class="tui-product-list" style="margin-top:{{dropScreenH+18}}rpx">
				<view class="tui-product-container">
						<block wx:for="{{goods}}" wx:key="index" wx:if="{{(index+1)%2!=0 || isList}}">
								<template is="productItem" data="{{item,index:index,isList:isList}}" />
						</block>
				</view>
				<view class="tui-product-container" wx:if="{{!isList}}">
						<block wx:for="{{goods}}" wx:key="index" wx:if="{{(index+1)%2==0}}">
								<template is="productItem" data="{{item,index:index}}" />
						</block>
				</view>
		</view>
		<!-- list -->
		<!-- 顶部下拉筛选弹层 属性 -->
		<tui-top-dropdown bgcolor="#f7f7f7" show="{{dropScreenShow}}" paddingbtm="110" translatey="{{dropScreenH}}" bind:close="btnCloseDrop">
				<block wx:for="{{attrArr}}" wx:for-item="att" wx:for-index="idx" wx:key="index">
						<block wx:if="{{att.isActive}}">
								<scroll-view class="tui-scroll-box" scroll-y scroll-top="{{scrollTop}}">
										<view class="tui-seizeaseat-20"></view>
										<view class="tui-drop-item {{item.selected?'tui-bold':''}}" wx:for="{{att.list}}" wx:key="index" catchtap="btnSelected" data-arrindex="{{idx}}" data-index="{{index}}">
												<tui-icon name="check" size="16" color="#e41f19" bold="{{true}}" visible="{{item.selected}}" tui-icon-class="tui-middle"></tui-icon>
												<text class="tui-ml tui-middle">{{item.name}}</text>
										</view>
										<view class="tui-seizeaseat-30"></view>
								</scroll-view>
								<view class="tui-drop-btnbox">
										<view class="tui-drop-btn tui-btn-white" hover-class="tui-white-hover" hover-stay-time="150" data-index="{{idx}}" bindtap="onClickDropBtnReset">
												重置
										</view>
										<view class="tui-drop-btn tui-btn-red" hover-class="tui-red-hover" hover-stay-time="150" data-index="{{idx}}" bindtap="onClickDropBtnSure">
												确定
										</view>
								</view>
						</block>
				</block>
		</tui-top-dropdown>
		<!-- -顶部下拉筛选弹层 属性 -->
		<!-- 左抽屉弹层 筛选 -->
		<tui-drawer mode="right" visible="{{drawer}}" bind:close="closeDrawer">
