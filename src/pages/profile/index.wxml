<view class="headWrap">
    <image src="data:image/svg+xml;base64," class="headBd" mode="aspectFill"></image>
    <view class="headContent">
        <view class="avatar">
            <view>
                <AppImage url="{{avatar || '/assets/images/profile/avatarDefault.svg'}}" defaultUrl="/assets/images/profile/avatarDefault.svg"></AppImage>
            </view>
        </view>
        <view class="name">
            {{name}}
        </view>
    </view>
</view>

<view class="list">
    <navigator url="/pages/historyTask/index" hover-class="none" class="listItem app-triangle">
        <view class="hd"></view>
        <view class="bd">我的任务</view>
        <view class="ft"></view>
    </navigator>
</view>