  <!-- tabbar -->
  <!-- header -->
  <view class="tui-header">
    <view class="tui-category" hover-class="opcity" hover-stay-time="150" bindtap="classify">
      <tui-icon name="manage-fill" color="#fff" size="22" tui-icon-class="tui-icon-category"></tui-icon>
      <view class="tui-category-scale">分类</view>
    </view>
    <view class="tui-rolling-search">
      <icon type="search" size='13' color='#999'></icon>
      <swiper vertical="{{true}}" autoplay="{{true}}" circular="{{true}}" interval="8000" class="tui-swiper">
        <swiper-item wx:for="{{hotSearch}}" wx:key="{{index}}" class="tui-swiper-item" bindtap="search">
          <view class="tui-hot-item">{{item}}</view>
        </swiper-item>
      </swiper>
    </view>
  </view>
  <!-- header -->
  <view class="tui-header-banner">
    <view class="tui-hot-search">
      <view>热搜</view>
      <view class="tui-hot-tag" bindtap="search">自热火锅</view>
      <view class="tui-hot-tag" bindtap="search">华为手机</view>
      <view class="tui-hot-tag" bindtap="search">有机酸奶</view>
      <view class="tui-hot-tag" bindtap="search">苹果手机</view>
    </view>
    <view class="tui-banner-bg">
      <view class="tui-primary-bg tui-route-left"></view>
      <view class="tui-primary-bg tui-route-right"></view>
      <!-- banner -->
      <view class="tui-banner-box">
        <swiper indicator-dots="true" autoplay="true" interval="5000" duration="150" class="tui-banner-swiper" circular="{{true}}">
          <swiper-item wx:for="{{banners}}" wx:key="{{index}}" catchtap="detail">
            <image src="{{item.images.url}}" class="tui-slide-image" mode="scaleToFill" />
          </swiper-item>
        </swiper>
      </view>
    </view>
  </view>
  <view class="tui-product-category">
    <view class="tui-category-item" wx:for="{{confList['home_category']}}" wx:key="{{index}}" data-key="{{item.name}}" bindtap="more">
      <image src="{{item.images.url}}" class="tui-category-img" mode="scaleToFill"></image>
      <view class="tui-category-name">{{item.name}}</view>
    </view>
  </view>
  <view class="tui-product-box tui-pb-20 tui-bg-white">
    <view class="tui-group-name" bindtap="more">
      <text>新人专享</text>
      <tui-icon name="arrowright" size="20" color="#555"></tui-icon>
    </view>
    <view class="tui-activity-box" bindtap="detail">
      <!-- 点击事件 -->
      <image src="../../assets/images/mall/activity/activity_1.jpg" class="tui-activity-img" mode="widthFix"></image>
      <image src="../../assets/images/mall/activity/activity_2.jpg" class="tui-activity-img" mode="widthFix"></image>
    </view>
  </view>
  <view class="tui-product-box tui-pb-20 tui-bg-white">
    <view class="tui-group-name" bindtap="more">
      <text>新品推荐</text>
      <tui-icon name="arrowright" size="20" color="#555"></tui-icon>
    </view>
    <view class="tui-new-box">
      <view class="tui-new-item {{index!=0 && index!=1 ?'tui-new-mtop':''}}" wx:for="{{newProduct}}" wx:key="{{index}}" bindtap="detail">
        <image src="../../assets/images/mall/new/{{item.type==1?'new':'discount'}}.png" class="tui-new-label" wx:if="{{item.isLabel}}"></image>
        <view class="tui-title-box">
          <view class="tui-new-title">{{item.name}}</view>
          <view class="tui-new-price">
            <text class="tui-new-present">￥{{item.present}}</text>
            <text class="tui-new-original">￥{{item.original}}</text>
          </view>
        </view>
        <image src="../../assets/images/mall/new/{{item.pic}}" class="tui-new-img"></image>
      </view>
    </view>
  </view>
  <view class="tui-product-box">
    <view class="tui-group-name">
      <text>热门推荐</text>
    </view>
    <view class="tui-product-list">
      <view class="tui-product-container">
        <block wx:for="{{goods}}" wx:key="{{index}}" wx:if="{{(index+1)%2!=0}}">
          <template is="productItem" data="{{item,index:index}}" />
        </block>
      </view>
      <view class="tui-product-container">
        <block wx:for="{{goods}}" wx:key="{{index}}" wx:if="{{(index+1)%2==0}}">
          <template is="productItem" data="{{item,index:index}}" />
        </block>
      </view>
    </view>
  </view>
  <!-- 模板 -->
  <template name="productItem">
    <!-- 商品列表 -->
    <view class="tui-pro-item" hover-class="hover" hover-start-time="150" data-guid="{{item.guid}}" bindtap="showDetail">
      <image src="{{item.image}}" class="tui-pro-img" mode="widthFix" />
      <view class="tui-pro-content">
        <view class="tui-pro-tit">{{item.name}}</view>
        <view>
          <view class="tui-pro-price">
            <text class="tui-sale-price">￥{{item.currentPrice}}</text>
            <text class="tui-factory-price" wx:if="{{item.originalPrice>0}}">
              ￥{{item.originalPrice}}
            </text>
          </view>
          <view class="tui-pro-pay">{{1000}}人付款</view>
        </view>
      </view>
    </view>
    <!-- 商品列表 -->
  </template>
  <!-- 加载loadding -->
  <tui-loadmore visible="{{loadding}}" index="3" type="red"></tui-loadmore>
  <!-- <tui-nomore visible="{{!pullUpOn}}"></tui-nomore> -->
  <!-- 加载loadding -->
  <view class="tui-safearea-bottom"></view>
</view>