  >
  请选择asdafa
  </van-field> -->

  <!-- <view class="van-cell__title van-cell__title" style="max-width:90px;min-width:90px" role="" aria-label=""> 地址 </view>
   -->

  <van-cell
    title="地址"
    title-width="70px"
    icon="location-o"  
    on
    is-link
  > 
  <view class="address-region">
    <picker mode="region" bindchange="onChangeRegion" class="address-region-block" value="{{region}}" custom-item="{{customItem}}">
      <view class="address-region-value">
        <block wx:if="{{region.length>0}}" >
          {{region[0]}}，{{region[1]}}，{{region[2]}}
        </block>
         <block wx:else>
            请选择 
         </block> 
      </view>
    </picker>
  </view>

  </van-cell>
 
  <van-field
    value="{{ detailInfo }}"
    error-message="{{errDetailInfo}}"
    label="详细地址"
    type="textarea"
    placeholder="如楼栋、单元室、门牌号等"
    autosize
    border="{{ false }}"
    bind:input="onInputDetailInfo"
  />

 <van-switch-cell
  title="是否默认"
  checked="{{ defult }}"
  active-color="#07c160"
  bind:change="onChangeSwitchDefult"
/>

</van-cell-group>

  <van-button type="primary" size="large" custom-class="address-save-but" disabled="{{butSaveDisabled}}" bind:click="onButtonSave">
  保存
  </van-button>
</view>

<!--弹出层-->
<van-popup
  show="{{ show }}"
  position="top"
  overlay="{{ false }}"
  bind:close="onClosePopup"
>
  <view class="popup-show-content">
    {{errMessage}}
  </view>
    
</van-popup>
