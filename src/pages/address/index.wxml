<view class="address">
  <van-cell-group>
  <van-field
    value="{{ username }}"
    clearable
    label="姓名"
    placeholder="请输入收货人姓名"
    error-message="{{errUsername}}"
    bind:click-icon="onClickIcon"
    bind:input="onInputUsername"
  />

  <van-cell>
 <view class="address-sex-radio-group">
      <van-radio-group value="{{ radio }}"   bind:change="onChangeSexRadio">
      <van-radio checked-color="#07c160" name="1" custom-class="address-sex-radio">先生</van-radio>
      <van-radio checked-color="#07c160" name="2" custom-class="address-sex-radio">女士</van-radio>
      </van-radio-group>
  </view>
  </van-cell>
  
  <van-field
    value="{{ phone }}"
    error-message="{{errPhone}}"
    clearable
    label="电话"
    placeholder="请填写收货人电话"
    bind:click-icon="onClickIcon"
    bind:input="onInputPhone"
  />

  <!-- TODO://地址选择 根据当前位置，获取附近的地点 addressSelect 页面 待完成 -->
