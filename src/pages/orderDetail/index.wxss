Page .main {
  margin-top: 10px;
}

Page .address .address-add {
  text-align: left;
}

Page .goods-list-card-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

Page .goods-info {
  margin-top: 20px;
}

Page .goods-info-card {
  background-color: #fff;
  box-sizing: border-box;
  height: 82px;
}

Page .goods-list-card-title {
  font-size: 14px;
  font-weight: 500;
  /* margin-top: 10px; */
}

Page .goods-list-card-desc {
  font-size: 12px;
  color: #999;
  /* margin-top: 10px; */
}

Page .goods-info-card-price {
  /* margin-top: 10px; */
}

Page .goods-info-card-number {
  /* margin-top: 10px; */
}

Page .goods-list-card-thumb {
  width: 80px;
  height: 80px;
}

Page .goods-list-card-thumb image {
  width: 100%;
  height: 100%;
}

Page .goods-list-card-footer {
  position: absolute;
}

Page .remark {
  margin-top: 20px;
  width: 95%;
  margin-left: 10px;
}

Page .o-footer {
  height: 55rpx;
  margin-bottom: 100rpx;
}

Page .o-footer-money {
  display: inline-block;
  float: right;
  flex: 1;
  font-weight: 500;
  text-align: right;
  color: #323233;
  padding-right: 12px;
}

Page .o-footer-but {
  display: inline-block;
  float: right;
}
Page .o-footer-money-block {
  color: #f44;
  font-size: 18px;
  font-weight: 500;
  text-align: right;
  display: inline-block;
}

Page .order-info {
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

Page .footer-option-but {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
}

Page .footer-option-but .option-but {
  display: inline-block;
  /* margin-left: 5rpx; */
}

Page .footer-option-but .option-but-right {
  float: right;
}
Page .footer-option-but .option-but-left {
  float: left;
}

Page .footer-option-but .option-but .money {
  margin-left: 30rpx;
}

